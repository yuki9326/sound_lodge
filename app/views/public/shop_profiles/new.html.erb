<div class="container">
  <h1 class="shop-profile-heading">Create Profile</h1>
  <div class="row justify-content-center">
    <%= form_with model: @shop_profile, local: true do |f| %>

    <div class="form-group">
      <%= f.label :username, "ユーザーネーム" %>
      <%= @shop_profile.end_user.username %>
    </div>
    <div class="form-group">
      <%= f.label :image, "プロフィール画像" %><br>
      <%= f.attachment_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :shop_name, "店名" %>
      <%= f.text_field :shop_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :area, "店舗所在地" %>
      <%= f.select :area, ShopProfile.areas_i18n.invert, {prompt: "---"}, {class:"form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :genre, "希望音楽ジャンル" %>
      <%= f.select :genre, ShopProfile.genres_i18n.invert, {prompt: "---"}, {class:"form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :is_vocal, "ボーカルの希望" %>
      <%= f.radio_button :is_vocal, :有り, checked: "checked" %>
      <%= f.label :有り %>
      <%= f.radio_button :is_vocal, :無し %>
      <%= f.label :無し %>
    </div>
    <div class="form-group">
      <%= f.label :shop_image, "店舗画像" %><br>
      <%= f.attachment_field :shop_image %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, "店舗紹介文" %>
      <%= f.text_area :introduction, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :audio_equipment, "店舗音響設備" %>
      <%= f.text_area :audio_equipment, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "希望価格(1時間)" %>
      <div class="d-flex flex-row">
        <%= f.text_field :price, class:"form-control" %><span> 円</span>
      </div>
    </div>
    <br>
    <%= f.submit "登録", class:"btn btn-outline-dark btn-block" %>
    <% end %>
  </div>
</div>