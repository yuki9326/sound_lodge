<% if end_user_signed_in? %>
    <% if current_end_user.already_musician_favorited?(musician_profile) %>
        <%= link_to musician_profile_musician_favorites_path(musician_profile), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <% end %>
    <% else %>
        <%= link_to musician_profile_musician_favorites_path(musician_profile), method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;"></i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true"></i>
<% end %>