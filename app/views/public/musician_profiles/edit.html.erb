<h1 class="musician_profile_edit">Edit Profile</h1>

<%= form_with model: @musician_profile, local:true do |f| %>
<div class="musician_profile_container">
<div class="musician_form">
   <%= f.label :username, "ユーザーネーム" %>　<%= f.text_field :username, class:"musician_form_username" %>
</div>
<div class="musician_form">
  <%= f.label :area, "活動エリア" %>　<%= f.select :area_status, MusicianProfile.area_statuses.keys, {}, {class:'musician_form_area'} %>
</div>
<div class="musician_form">
  <%= f.label :genre_id, "音楽ジャンル" %>　<%= f.select :genre_status, Genre.genre_statuses.keys, {}, {class: 'musician_form_genre'} %>
</div>
<div class="musician_form">
  <%= f.label :instrument, "楽器" %>　<%= f.text_field :instrument, class:"musician_form_instrument" %>
</div>
<div class="musician_form">
  <%= f.label :total_member, "活動人数" %>　<%= f.text_field :total_member, class:"musician_form_total_member" %><p>　人</p>
</div>
<div class="musician_form">
  <%= f.label :is_vocal, "ボーカルの有無" %>　<%= f.radio_button :is_vocal, :有り, checked: "checked", class:"musician_is_vocal_button" %>
  <%= f.label :有り, class: "musician_is_vocal_label" %>　<%= f.radio_button :is_vocal, :無し %>
  <%= f.label :無し, class: "musician_is_vocal_label" %>
</div>
<br>
<div class="musician_form">
  <%= f.label :video_id, "演奏動画" %>　<%= f.file_field :video, class:"musician_form_video" %>
</div>
<br>
<div class="musician_form">
  <%= f.label :introduction, "自己紹介" %>　<%= f.text_area :introduction, class:"musician_form_introduction" %>
</div>
<br>
<div class="musician_form">
  <%= f.label :price, "希望価格(1時間)" %>　<%= f.text_field :price, class:"musician_form_price" %><p>　円</p>
</div>
<div class="musician_form">
  <%= f.submit "変更を保存", class:"musician_form_confirmation_button" %>
</div>
</div>
<% end %>