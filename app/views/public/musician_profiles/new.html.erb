<div class="container">
  <h1 class="musician-profile-heading">Create Profile</h1><br><br>
  <div class="row justify-content-center">
    <%= form_with model: @musician_profile, local:true do |f| %>

    <div class="form-group">
      <%= f.label :username, "ユーザーネーム" %>
      <%= f.text_field :username, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image, "プロフィール画像" %>
      <%= f.attachment_field :image, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :area, "活動エリア" %>
      <%= f.select :area, MusicianProfile.area_statuses.keys, {}, {class:'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :genre, "音楽ジャンル" %>
      <%= f.select :genre, Genre.genre_statuses.keys, {}, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :instrument, "楽器" %>
      <%= f.text_field :instrument, class:"musician_form_instrument" %>
    </div>
    <div class="form-group">
      <%= f.label :total_member, "活動人数" %>
      <%= f.text_field :total_member, class:"musician_form_total_member" %><p>人</p>
    </div>
    <div class="form-group">
      <%= f.label :is_vocal, "ボーカルの有無" %>
      <%= f.radio_button :is_vocal, :有り, checked: "checked", class:"form-control" %>
      <%= f.label :有り %>
      <%= f.radio_button :is_vocal, :無し, class:"form-control" %>
      <%= f.label :無し %>
    </div>
    <div class="form-group">
      <%= f.label :video_id, "演奏動画" %>
      <%= f.file_field :video, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "希望価格(1時間)" %>
      <%= f.text_field :price, class:"form-control" %><p>円</p>
    </div>
    <br>
    <%= f.submit "登録", class:"btn btn-warning btn-block" %>
    <% end %>
  </div>
</div>