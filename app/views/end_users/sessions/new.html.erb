<div class="container">
  <h1 class="session-heading">Log In</h1><br><br>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control session" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control session" %>
      <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    </div>
    <br>
    <%= f.submit "ログイン", class:"btn btn-outline-dark btn-block" %>
    <% end %>
  </div>

  <div class="row">
    <p class="to-registration mx-auto">新規会員登録は<%= link_to 'こちら', new_end_user_registration_path %></p>
  </div>
</div>