<div class="container">
  <h1 class="end-user-heading">Edit User's Infomation</h1><br><br>
    <div class="row justify-content-center">
      <%= form_with model: @end_user, url:admin_end_user_path(@end_user.id), local: true do |f| %>

      <div class="form-group">
        <%= f.label :name, "氏名" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :username, "ユーザーネーム" %>
        <%= f.text_field :username, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control" %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :end_user_status, "会員タイプ選択" %>
        <%= f.radio_button :end_user_status, :musician %>
        <%= f.label :ミュージシャン %>
        <%= f.radio_button :end_user_status, :shop %>
        <%= f.label :お店 %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :is_active, "会員ステータス" %>
        <%= f.radio_button :is_active, "有効", checked: "checked" %>
        <%= f.label :有効 %>
        <%= f.radio_button :is_active, "退会" %>
        <%= f.label :退会 %>
      </div>
      <br>
      <%= f.submit "変更", class:"btn btn-outline-success btn-block" %>
      <% end %>
    </div>
    <br>
    <br>
    <div class="row justify-content-center">
      <p>退会は<%= link_to "こちら", end_users_confirm_path %></p>
    </div>
</div>

